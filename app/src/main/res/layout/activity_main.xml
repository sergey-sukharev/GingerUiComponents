<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_item2" />

    <dev.ginger.ui.components.GingerLineItem
        android:id="@+id/my_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:actionIcon="@drawable/ic_ginger"
        app:imageType="middle"
        app:actionType="switcher"
        app:titleText="MyTitleText"
        app:dividerType="middle"
        app:subtitleText="The perfect subtitle in one line... I love my job. Oh..dsdshdjshajhdjhkhdashdkhsahgfdg "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineType="one_line" />

    <dev.ginger.ui.components.GingerLineItem
        android:id="@+id/my_item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:actionIcon="@drawable/ic_ginger"
        app:actionType="checkbox"
        app:dividerType="full_bleed"
        app:startIcon="@drawable/ic_ginger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_item"
        app:lineType="one_line"
        app:titleText="MyTitleText" />

    <dev.ginger.ui.components.GingerLineItem
        android:id="@+id/my_item3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:actionIcon="@drawable/ic_ginger"
        app:actionType="icon"
        app:dividerType="inset"
        app:dividerTint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_item2"
        app:lineType="two_line"
        app:subtitleText="The perfect subtitle in one line... I love my job. Oh..dsdshdjshajhdjhkhdashdkhsahgfdg "
        app:titleText="MyTitleText" />

</androidx.constraintlayout.widget.ConstraintLayout>