<resources>
    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
<!--        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>-->
        <item name="colorAccent">@color/design_default_color_secondary</item>
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
<!--        <item name="actionMenuTextColor">@color/design_default_color_secondary</item>-->
    </style>

    <style name="GingerToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@android:color/holo_green_light</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/cardview_shadow_end_color</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/colorPrimary</item>
<!--        &lt;!&ndash; Applies to views in their activated state (i.e checked or switches) &ndash;&gt;-->
        <item name="colorControlActivated">#E53935</item>
<!--        &lt;!&ndash; Applied to framework control highlights (i.e ripples or list selectors) &ndash;&gt;-->
        <item name="colorControlHighlight">#FFB300</item>
    </style>
</resources>