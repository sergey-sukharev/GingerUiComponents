<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GingerCompositeTextView">

        <attr name="lineType" format="enum">
            <enum name="one_line" value="0"/>
            <enum name="two_line" value="1"/>
            <enum name="three_line" value="2"/>
        </attr>

        <attr name="actionType" format="enum">
            <enum name="icon" value="0"/>
            <enum name="checkbox" value="1"/>
            <enum name="switcher" value="2"/>
        </attr>

        <attr name="startIconSize" format="enum">
            <enum name="none" value="0"/>
            <enum name="icon" value="1"/>
            <enum name="small" value="2"/>
            <enum name="middle" value="3"/>
            <enum name="large" value="4"/>
        </attr>

        <attr name="dividerType" format="enum">
            <enum name="none" value="0"/>
            <enum name="full_bleed" value="1"/>
            <enum name="inset" value="2"/>
            <enum name="middle" value="3"/>
        </attr>

        <attr name="dividerTint" format="color"/>

        <attr name="titleText" format="string"/>
        <attr name="subtitleText" format="string"/>

<!--        <attr name="titleTextStyle" format="reference"/>-->
<!--        <attr name="subtitleTextStyle" format="reference"/>-->

        <attr name="titleTextColor" format="color"/>
        <attr name="subtitleTextColor" format="color"/>

        <attr name="startIcon" format="reference"/>
        <attr name="actionIcon" format="reference"/>

        <attr name="startIconTint" format="color"/>
        <attr name="actionIconTint" format="color"/>
    </declare-styleable>

    <attr name="dialogToolbarTextColor" format="reference"/>
    <attr name="dialogToolbarIconsColor" format="reference"/>
    <attr name="dialogToolbarBackgroundColor" format="reference"/>

    <declare-styleable name="CustomEditText">
    </declare-styleable>
</resources>